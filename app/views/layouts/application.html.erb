<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% flash.each do |type, msg| %>
    <%= content_tag :div, sanitize(msg), class: type %>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
