<div id="<%= link.id %>" class="link-data">
  <% unless @hots.nil? || @hots.empty? %>
    <% if  @hots.include?(link.url) && link.url == @hots[0] %>
      <h5 style="color:red">Top Link</h5>
    <% elsif @hots.include?(link.url)%>
      <h5 style="color:orange">HOT</h5>
    <% end %>
  <% end %>
  <h4><%= link.title %></h4>
  URL: <%= link_to link.url, link.url %><br>
  Read: <%= link.read %><br>
  <%= link_to "Edit", edit_link_path(link) %><br>

  <% if link.read == false %>
    <input type="button" link_id="<%= link.id %>" value="Mark as Read" class="mark-as-read" id="button<%= link.id %>"><br><br>
  <% else %>
    <input type="button" link_id="<%= link.id %>" value="Mark as Unread" class="mark-as-unread" id="button<%= link.id %>"><br><br>
  <% end %>
</div>
