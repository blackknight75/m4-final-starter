<div id="links-form">
  <%= form_for @link do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :url %><br>
  <%= f.text_field :url %><br>
  <%= f.submit "Create Link", id: "create-link-button" %><br><br><br>
  <% end %>
</div>

<div id="links-list">
  <% @links.each do |link| %>
    Title: <%= link.title %><br>
    URL: <%= link_to link.url, link.url %><br>
    Read: <%= link.read %><br><br>
  <% end %>
</div>
